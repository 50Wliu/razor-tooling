<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net6.0</TargetFrameworks>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <LangVersion>9.0</LangVersion>
    <Ngen>false</Ngen>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="MicrosoftVSRazorLanguageServer.serviceHub.service.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="$(FeatureFlagPath)">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.DotNet.Interactive" Version="1.0.0-beta.21329.2" />
    <PackageReference Include="Microsoft.ServiceHub.Client" Version="3.0.31-alpha" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.VisualStudio.Notebook.InteractiveService.Contract\Microsoft.VisualStudio.Notebook.InteractiveService.Contract.csproj" />
  </ItemGroup>

  <Target Name="FilesToPublishOutputGroup" DependsOnTargets="ComputeFilesToPublish" Outputs="@(FilesToPublishOutput)">
    <ItemGroup>
      <FilesToPublishOutput Include="@(ResolvedFileToPublish)">
        <TargetPath Condition="'%(ResolvedFileToPublish.DestinationSubPath)' != ''">%(ResolvedFileToPublish.DestinationSubPath)</TargetPath>
      </FilesToPublishOutput>
    </ItemGroup>
  </Target>
</Project>